page {
  background-color: #F8F7FC;
}
.same_day {
  box-sizing: border-box;
  display: flex;
  padding-bottom: constant(safe-area-inset-bottom) !important;
  padding-bottom: env(safe-area-inset-bottom) !important;
}
.same_day .same_day_content {
  flex: 1;
  display: flex;
}
.same_day .same_day_content .same_day_left {
  background-color: #FFFFFF;
  text-align: center;
  width: 100px;
  height: 100vh;
}
.same_day .same_day_content .same_day_left ::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
  color: transparent;
}
.same_day .same_day_content .same_day_left .same_day_left_item {
  height: 52px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 12px;
  color: rgba(14, 30, 117, 0.5);
  background-color: #FFFFFF;
  position: relative;
}
.same_day .same_day_content .same_day_left .same_day_left_item .line {
  width: 2px;
  height: 24px;
  background: #0E1E75;
  border-radius: 2px;
  position: absolute;
  left: 0;
  top: 13px;
}
.same_day .same_day_content .same_day_left .same_day_left_item .same_day_left_info {
  max-width: 90px;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.same_day .same_day_content .same_day_left .active {
  background-color: #FFFFFF;
  color: #0E1E75;
  font-weight: bold;
  font-size: 14px;
}
.same_day .same_day_content .same_day_right {
  flex: 1;
  height: 100vh;
}
.same_day .same_day_content .same_day_right ::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
  color: transparent;
}
.same_day .same_day_content .same_day_right .right_box {
  padding: 0 12px;
  padding-bottom: 12px;
  box-sizing: border-box;
}
.same_day .same_day_content .same_day_right .right_box .cake_top_image {
  width: 100%;
  display: block;
  margin-top: 12px;
}
.same_day .same_day_content .same_day_right .right_box .same_day_right_top {
  padding-top: 12px;
  height: auto;
  overflow: hidden;
}
.same_day .same_day_content .same_day_right .right_box .same_day_right_list {
  width: 100%;
  padding-bottom: 12px;
}
.same_day .same_day_content .same_day_right .right_box .same_day_right_list .same_day_right_item {
  display: flex;
  align-items: center;
  margin-top: 12px;
}
.same_day .same_day_content .same_day_right .right_box .same_day_right_list .same_day_right_item image {
  width: 100px;
  height: 80px;
  border-radius: 10px !important;
  overflow: hidden;
  display: block;
}
.same_day .same_day_content .same_day_right .right_box .same_day_right_list .same_day_right_item .item_text {
  flex: 1;
  margin-left: 12px;
}
.same_day .same_day_content .same_day_right .right_box .same_day_right_list .same_day_right_item .item_text .title {
  font-size: 12px;
  color: #606265;
  font-weight: bold;
  max-width: 130px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-top: 2px;
}
.same_day .same_day_content .same_day_right .right_box .same_day_right_list .same_day_right_item .item_text .info {
  font-size: 10px;
  height: 30px;
  color: #BFC4CC;
  max-width: 130px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-top: 4px;
}
.same_day .same_day_content .same_day_right .right_box .same_day_right_list .same_day_right_item .item_text .price {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.same_day .same_day_content .same_day_right .right_box .same_day_right_list .same_day_right_item .item_text .price .price_number {
  font-size: 16px;
  color: #0E1E75;
  font-weight: bold;
}
.same_day .same_day_content .same_day_right .right_box .same_day_right_list .same_day_right_item .item_text .price image {
  width: 24px;
  border-radius: 0 !important;
}

