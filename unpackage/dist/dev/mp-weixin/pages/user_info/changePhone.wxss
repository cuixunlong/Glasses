.change_num {
  background-color: #F3F4F5;
  padding: 0 15px;
  padding-top: 24px;
  height: 100vh;
  font-size: 14px;
}
.change_num .phone {
  font-size: 14px;
  color: #303133;
}
.change_num .phone .input {
  background-color: #FFFFFF;
  display: flex;
  align-items: center;
  border-radius: 22px;
  padding-left: 12px;
  height: 36px;
  box-sizing: border-box;
  margin-top: 8px;
}
.change_num .verification {
  margin-top: 24px;
  font-size: 14px;
}
.change_num .verification .verification_item {
  display: flex;
  align-items: center;
  margin-top: 8px;
}
.change_num .verification .verification_item .input {
  background-color: #FFFFFF;
  display: flex;
  align-items: center;
  border-radius: 22px;
  height: 36px;
  box-sizing: border-box;
  padding-left: 12px;
  flex: 7;
}
.change_num .verification .verification_item .code {
  padding: 0 20px;
  height: 36px;
  line-height: 36px;
  color: #FFFFFF;
  background-color: #0E1E75;
  border-radius: 22px;
  margin-left: 9px;
  font-size: 14px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 110px;
}
.change_num .next {
  height: 36px;
  line-height: 36px;
  color: #FFFFFF;
  font-size: 14px;
  background-color: #0E1E75;
  text-align: center;
  margin-top: 110px;
  border-radius: 18px;
}
.change_num .phcolor {
  font-size: 14px;
  color: #8F9399;
}

