page {
  background-color: #F3F4F5;
}
.edit_address {
  background-color: #F3F4F5;
}
.edit_address .top {
  padding: 10px 15px;
  background-color: #FFFFFF;
  display: flex;
  line-height: 21px;
}
.edit_address .top .title {
  flex: 7;
  text-align: center;
  font-size: 16px;
}
.edit_address .top .detail {
  color: #8F9399;
  font-size: 12px;
}
.edit_address .name_num {
  background-color: #FFFFFF;
  margin-bottom: 12px;
}
.edit_address .name_num .from .from_item:last-child {
  border: none;
}
.edit_address .name_num .from .from_item {
  display: flex;
  align-items: center;
  font-size: 14px;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}
.edit_address .name_num .from .from_item .item_name {
  width: 75px;
  margin-left: 20px;
  padding: 12px 0;
  color: #666666;
}
.edit_address .name_num .from .from_item .content {
  flex: 1;
  color: #333333;
  margin-right: 20px;
}
.edit_address .name_num .from .from_item .u-input__input {
  color: #333333 !important;
  padding: 12px 0 !important;
  min-height: 0 !important;
}
.edit_address .area {
  background-color: #FFFFFF;
  margin-bottom: 12px;
}
.edit_address .area .from_item:last-child {
  border: none;
}
.edit_address .area .from_item {
  display: flex;
  align-items: center;
  font-size: 14px;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}
.edit_address .area .from_item .u-input__input {
  color: #333333 !important;
  padding: 12px 0 !important;
  min-height: 0 !important;
}
.edit_address .area .from_item .item_name {
  width: 75px;
  margin-left: 20px;
  padding: 12px 0;
  color: #666666;
}
.edit_address .area .from_item .content {
  flex: 1;
  color: #333333;
  margin-right: 20px;
}
.edit_address .area .from_item .icon_right {
  margin-right: 20px;
  font-size: 12px;
  color: #999999;
}
.edit_address .default {
  background-color: #FFFFFF;
  height: 44px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 14px;
  padding: 0 15px;
  color: #666;
}
.edit_address .default .switch {
  display: flex;
  align-content: center;
}
.edit_address .default .switch .u-switch {
  display: block !important;
}
.edit_address .detail_address .u-input__input {
  min-height: 0 !important;
}

