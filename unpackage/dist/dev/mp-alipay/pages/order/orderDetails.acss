.order_details {
  height: 100vh;
}
.order_details .order_item {
  background-color: #F3F4F5;
  padding: 12px 15px;
  height: auto;
  padding-bottom: calc(60px + constant(safe-area-inset-bottom)) !important;
  padding-bottom: calc(60px + env(safe-area-inset-bottom)) !important;
}
.order_details .order_item .order_info {
  background-color: #FFFFFF;
  border-radius: 10px;
  padding: 16px 12px;
}
.order_details .order_item .order_info .state {
  font-size: 24px;
  font-weight: bold;
  color: #303133;
  text-align: center;
  padding-bottom: 16px;
  border-bottom: 1px solid rgba(0, 0, 0, 0.5);
}
.order_details .order_item .order_info .address_info {
  padding: 16px 0;
  color: #606265;
  font-size: 16px;
}
.order_details .order_item .order_info .address_info .title {
  font-size: 12px;
}
.order_details .order_item .order_info .address_info .user_info {
  display: flex;
  justify-content: space-between;
  margin-top: 8px;
  padding-bottom: 16px;
  border-bottom: 1px solid #EDEDED;
  box-sizing: border-box;
}
.order_details .order_item .order_info .address_info .address {
  padding: 16px 0;
  border-bottom: 1px solid rgba(0, 0, 0, 0.5);
  font-size: 16px;
  box-sizing: border-box;
}
.order_details .order_item .order_info .address_info .address .address_detail {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.order_details .order_item .send_time {
  font-size: 12px;
  color: #606265;
  border-bottom: 1px solid rgba(0, 0, 0, 0.5);
  box-sizing: border-box;
}
.order_details .order_item .send_time .send_top {
  display: flex;
  justify-content: space-between;
}
.order_details .order_item .send_time .send_state {
  color: #0E1E75;
  font-size: 24px;
  font-weight: bold;
  text-align: right;
  margin-top: 4px;
  padding-bottom: 16px;
}
.order_details .order_item .goods_detail {
  padding: 16px 0;
  color: #303133;
  font-size: 14px;
  border-bottom: 1px solid rgba(0, 0, 0, 0.5);
  box-sizing: border-box;
}
.order_details .order_item .goods_detail .title {
  color: #606265;
  font-size: 12px;
}
.order_details .order_item .goods_detail .goods_info {
  margin-top: 12px;
  display: flex;
  height: 56px;
}
.order_details .order_item .goods_detail .goods_info image {
  width: 56px;
  border-radius: 4px !important;
}
.order_details .order_item .goods_detail .goods_info .detail_right {
  margin-left: 16px;
  width: 100%;
  font-weight: bold;
}
.order_details .order_item .goods_detail .goods_info .detail_right .goods_price {
  display: flex;
  justify-content: space-between;
  margin-top: 12px;
}
.order_details .order_item .remarks {
  padding: 16px 0;
  color: #606265;
  font-size: 12px;
  border-bottom: 1px solid rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
}
.order_details .order_item .remarks .title {
  flex: 7;
}
.order_details .order_item .remarks .remarks_content {
  max-width: 80%;
}
.order_details .order_item .serve_money {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16px 0;
  color: #0E1E75;
  font-size: 12px;
  border-bottom: 1px solid rgba(0, 0, 0, 0.5);
}
.order_details .order_item .serve_money .title {
  color: #606265;
}
.order_details .order_item .total_price {
  display: flex;
  padding-top: 16px;
  justify-content: space-between;
  align-items: center;
  font-size: 19px;
  font-weight: bold;
}
.order_details .order_item .total_price .title {
  font-size: 12px;
  color: #606265;
  font-weight: normal;
}
.order_details .btn_list {
  display: flex;
  background-color: #FFFFFF;
  position: fixed;
  align-items: center;
  justify-content: space-between;
  bottom: 0;
  width: 100%;
  padding: 0 15px;
  height: calc(48px+constant(safe-area-inset-bottom));
  height: calc(48px + env(safe-area-inset-bottom));
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}
.order_details .btn_list .price {
  color: #F16464;
  font-size: 18px;
}
.order_details .btn_list .right_btn {
  display: flex;
  justify-content: flex-end;
}
.order_details .btn_list .right_btn .btn:last-child {
  background-color: #0E1E75;
}
.order_details .btn_list .right_btn .btn {
  width: 110px;
  height: 32px;
  line-height: 32px;
  text-align: center;
  color: #FFFFFF;
  margin-left: 12px;
  border-radius: 16px;
  font-size: 14px;
  background-color: #DBDDEA;
  box-sizing: border-box;
}
.order_details .btn_list .right_btn .order_state {
  color: #0E1E75;
  font-size: 14px;
  line-height: 32px;
}

